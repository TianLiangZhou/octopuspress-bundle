{% extends '@OctopusPressBundle/base.html.twig' %}
{% block header %}{% endblock %}
{% block footer %}{% endblock %}
{% block body %}
<section class="bg-basic py-14 lg:py-20">
    <div class="container mx-auto">
        <div class="flex justify-center">
            <div class="w-full px-4 max-w-lg mx-auto">
                <div class="card">
                    <div class="card-header">
                        <div class="flex justify-center">
                            <svg class="w-16" viewBox="0 0 192 192" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                                <g  stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                    <path d="M62.10369,112.89631 C73.258339,124.050959 73.258339,142.136218 62.10369,153.290867 C50.949041,164.445517 32.8637816,164.445517 21.7091325,153.290867 C10.5544835,142.136218 10.5544835,124.050959 21.7091325,112.89631 M62.10369,112.89631 C43.061513,93.854133 43.061513,62.980664 62.10369,43.938487 C81.145867,24.89631 112.019336,24.89631 131.061513,43.938487 C150.10369,62.980664 150.10369,93.854133 131.061513,112.89631 M171.254881,112.89631 C182.40953,124.050959 182.40953,142.136218 171.254881,153.290867 C160.100232,164.445517 142.014972,164.445517 130.860323,153.290867 C119.705674,142.136218 119.705674,124.050959 130.860323,112.89631" id="形状" stroke="#3366EF" stroke-width="20" stroke-linecap="round" stroke-linejoin="round"></path>
                                    <circle  fill="#3366EF" cx="96.5826015" cy="78.4173985" r="18.2852041"></circle>
                                </g>
                            </svg>
                        </div>
                        <label class="block label py-1.5">您正在安装章鱼出版社，填写以下信息点击安装即可完成.</label>
                        {% if error is defined %}
                        <div class="text-center text-danger-500 mt-2">{{ error }}</div>
                        {% endif %}
                    </div>
                    <div class="card-body">
                        <form action="/install" method="post">
                            {% if csrf %}
                            <input type="hidden" name="install[_token]" value="{{ csrf_token('install') }}"/>
                            {% endif %}
                            <div class="form-group">
                                <label for="title" class="label sm:w-1/4 py-1.5">名称</label>
                                <input
                                    class="input basic w-full"
                                    id="title"
                                    required
                                    name="install[title]"
                                    type="text"
                                    placeholder="名称"
                                />
                            </div>
                            <div class="form-group">
                                <label for="subtitle" class="label sm:w-1/4 py-1.5">标语</label>
                                <input
                                    class="input basic w-full"
                                    id="subtitle"
                                    name="install[subtitle]"
                                    type="text"
                                    placeholder="标语"
                                />
                            </div>
                            <div class="form-group">
                                <label for="account" class="label sm:w-1/4 py-1.5">用户名</label>
                                <input
                                    class="input basic w-full"
                                    id="account"
                                    required
                                    name="install[account]"
                                    type="text"
                                    minlength="2"
                                    maxlength="24"
                                    placeholder="用户名"
                                />
                            </div>
                            <div class="form-group">
                                <label for="password" class="label sm:w-1/4 py-1.5">密码</label>
                                <input
                                    class="input basic w-full"
                                    id="password"
                                    required
                                    name="install[password]"
                                    type="password"
                                    minlength="6"
                                    maxlength="32"
                                    placeholder="账户密码"
                                />
                            </div>
                            <div class="form-group">
                                <label for="email" class="label sm:w-1/4 py-1.5">邮箱地址</label>
                                <div class="flex flex-col w-full">
                                <input
                                    class="input basic w-full"
                                    id="email"
                                    required
                                    name="install[email]"
                                    type="email"
                                    placeholder="管理员电子邮箱地址"
                                />
                                <label class="label !font-normal pt-1 text-xs">设置一个邮箱地址，可以在忘记密码的时候使用邮箱来找回密码</label>
                                </div>
                            </div>
                            <div class="mb-10">
                                <button id="btnSubmit" name="submit" type="submit" disabled class="btn primary medium w-full">安装</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">

</script>
{% endblock %}
