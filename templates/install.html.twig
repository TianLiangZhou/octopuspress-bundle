<body class="bg-basic-300 dark:bg-basic-1000">
<section class="py-14 lg:py-20">
    <div class="container mx-auto">
        <div class="flex flex-row justify-center">
            <div class="w-full md:w-1/2 lg:w-1/3">
                <div class="bg-basic-100 border-basic-400 text-color-100 flex flex-col border border-solid dark:bg-basic-800 dark:border-basic-1100 dark:text-basic-800">
                    <div class="border-b border-b-solid border-b-basic-300 dark:border-b-basic-1000 px-6 py-4">
                        {% if error is defined %}
                            <div class="text-center text-danger-500">{{ error }}</div>
                        {% else %}
                        <div class="my-10 text-center">
                            <a href="javascript:"
                               class="mx-auto inline-block text-basic-600 font-medium font-roboto text-4xl">
                                {{ title }}
                            </a>
                        </div>
                        {% endif %}
                    </div>
                    <div class="px-6 py-4 relative">
                        <form action="/install" method="post">
                            <input type="hidden" name="install[_token]" value="{{ csrf_token('install') }}"/>
                            <div class="mb-6 flex flex-col items-start">
                                <label for="title" class="text-basic-600 text-base py-1.5">站点名称</label>
                                <input
                                    class="rounded w-full px-4 py-2 border border-solid text-basic-800 bg-basic-200 border-primary-500 dark:text-basic-100 dark:bg-basic-900"
                                    id="title"
                                    required
                                    name="install[title]"
                                    type="text"
                                    placeholder="名称"
                                />
                            </div>
                            <div class="mb-6 flex flex-col items-start">
                                <label for="subtitle" class="text-basic-600 text-base py-1.5">站点子名称</label>
                                <input
                                    id="subtitle"
                                    name="install[subtitle]"
                                    type="text"
                                    placeholder="子名称"
                                    class="rounded w-full px-4 py-2 border border-solid text-basic-800 bg-basic-200 border-primary-500 dark:text-basic-100 dark:bg-basic-900"
                                />
                            </div>
                            <div class="mb-6 flex flex-col items-start">
                                <label for="account" class="text-basic-600 text-base py-1.5">用户名</label>
                                <input
                                    id="account"
                                    required
                                    name="install[account]"
                                    type="text"
                                    minlength="2"
                                    maxlength="24"
                                    placeholder="用户名"
                                    class="rounded w-full px-4 py-2 border border-solid text-basic-800 bg-basic-200 border-primary-500 dark:text-basic-100 dark:bg-basic-900"
                                />
                            </div>
                            <div class="mb-6 flex flex-col items-start">
                                <label for="password" class="text-basic-600 text-base py-1.5">密码</label>
                                <input
                                    id="password"
                                    required
                                    name="install[password]"
                                    type="password"
                                    minlength="6"
                                    maxlength="32"
                                    placeholder="账户密码"
                                    class="rounded w-full px-4 py-2 border border-solid text-basic-800 bg-basic-200 border-primary-500 dark:text-basic-100 dark:bg-basic-900"
                                />
                            </div>
                            <div class="mb-6 flex flex-col items-start">
                                <label for="email" class="text-basic-600 text-base py-1.5">电子邮箱地址</label>
                                <input
                                    id="email"
                                    required
                                    name="install[email]"
                                    type="email"
                                    placeholder="管理员电子邮箱地址"
                                    class="rounded w-full px-4 py-2 border border-solid text-basic-800 bg-basic-200 border-primary-500 dark:text-basic-100 dark:bg-basic-900"
                                />
                                <label
                                    class="text-basic-600  pt-1 text-xs">设置一个邮箱地址，可以在忘记密码的时候使用邮箱来找回密码</label>
                            </div>
                            <div class="mb-10">
                                <button name="submit" type="submit" disabled
                                        class="w-full py-2 px-3 border-solid border rounded bg-primary-500 border-primary-500 text-basic-100 disabled:text-basic-600/75 disabled:border-basic-600/25 disabled:bg-basic-600/25">
                                    安装
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">
    /**
     * @type {HTMLFormElement}
     */
    const form = document.querySelector('form');
    /**
     *
     * @type {HTMLButtonElement}
     */
    const button = form.querySelector('button');
    /**
     *
     * @param {Event} changeEvent
     */
    const changeEvent = function (changeEvent) {
        button.disabled = !form.checkValidity();
    };
    form.addEventListener('change', changeEvent);
</script>
</body>
