<body class="bg-basic-300 dark:bg-basic-1000">
<section class="py-14 lg:py-20">
    <div class="container mx-auto">
        <div class="flex flex-row justify-center">
            <div class="w-full px-3 md:px-0 md:w-4/5 lg:w-3/5">
                <div class="bg-basic-100 border-basic-400 text-color-100 flex flex-col border border-solid dark:bg-basic-800 dark:border-basic-1100 dark:text-basic-800">
                    <div class="border-b border-b-solid border-b-basic-300 dark:border-b-basic-1000 px-6 py-4">
                        {% if error is defined %}
                            <div class="text-center text-danger-500">{{ error }}</div>
                        {% else %}
                        <div class="my-10 flex flex-col items-center">
                            <svg class="w-28" viewBox="0 0 192 192" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                                <g  stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                    <path d="M62.10369,112.89631 C73.258339,124.050959 73.258339,142.136218 62.10369,153.290867 C50.949041,164.445517 32.8637816,164.445517 21.7091325,153.290867 C10.5544835,142.136218 10.5544835,124.050959 21.7091325,112.89631 M62.10369,112.89631 C43.061513,93.854133 43.061513,62.980664 62.10369,43.938487 C81.145867,24.89631 112.019336,24.89631 131.061513,43.938487 C150.10369,62.980664 150.10369,93.854133 131.061513,112.89631 M171.254881,112.89631 C182.40953,124.050959 182.40953,142.136218 171.254881,153.290867 C160.100232,164.445517 142.014972,164.445517 130.860323,153.290867 C119.705674,142.136218 119.705674,124.050959 130.860323,112.89631" id="形状" stroke="#3366EF" stroke-width="20" stroke-linecap="round" stroke-linejoin="round"></path>
                                    <circle  fill="#3366EF" cx="96.5826015" cy="78.4173985" r="18.2852041"></circle>
                                </g>
                            </svg>
                        </div>
                        <div>
                            <label class="text-basic-600 text-sm py-1.5">您正在安装章鱼出版社，填写以下信息点击安装即可完成.</label>
                        </div>
                        {% endif %}
                    </div>
                    <div class="px-6 py-4 relative">
                        <form action="/install" method="post">
                            {% if csrf %}
                            <input type="hidden" name="install[_token]" value="{{ csrf_token('install') }}"/>
                            {% endif %}
                            <div class="mb-6 flex flex-col md:flex-row items-start">
                                <label for="title" class="w-full md:w-1/4 text-basic-600 text-base py-1.5">站点名称</label>
                                <input
                                    class="rounded w-full px-4 py-2 border border-solid text-basic-800 bg-basic-200 border-primary-500 dark:text-basic-100 dark:bg-basic-900"
                                    id="title"
                                    required
                                    name="install[title]"
                                    type="text"
                                    placeholder="名称"
                                />
                            </div>
                            <div class="mb-6 flex flex-col md:flex-row items-start">
                                <label for="subtitle" class="w-full md:w-1/4 text-basic-600 text-base py-1.5">站点子名称</label>
                                <input
                                    id="subtitle"
                                    name="install[subtitle]"
                                    type="text"
                                    placeholder="子名称"
                                    class="rounded w-full px-4 py-2 border border-solid text-basic-800 bg-basic-200 border-primary-500 dark:text-basic-100 dark:bg-basic-900"
                                />
                            </div>
                            <div class="mb-6 flex flex-col md:flex-row items-start">
                                <label for="account" class="w-full md:w-1/4 text-basic-600 text-base py-1.5">用户名</label>
                                <input
                                    id="account"
                                    required
                                    name="install[account]"
                                    type="text"
                                    minlength="2"
                                    maxlength="24"
                                    placeholder="用户名"
                                    class="rounded w-full px-4 py-2 border border-solid text-basic-800 bg-basic-200 border-primary-500 dark:text-basic-100 dark:bg-basic-900"
                                />
                            </div>
                            <div class="mb-6 flex flex-col md:flex-row items-start">
                                <label for="password" class="w-full md:w-1/4 text-basic-600 text-base py-1.5">密码</label>
                                <input
                                    id="password"
                                    required
                                    name="install[password]"
                                    type="password"
                                    minlength="6"
                                    maxlength="32"
                                    placeholder="账户密码"
                                    class="rounded w-full px-4 py-2 border border-solid text-basic-800 bg-basic-200 border-primary-500 dark:text-basic-100 dark:bg-basic-900"
                                />
                            </div>
                            <div class="mb-6 flex flex-col md:flex-row items-start">
                                <label for="email" class="w-full md:w-1/4 text-basic-600 text-base py-1.5">电子邮箱地址</label>
                                <div class="flex flex-col w-full">
                                <input
                                    id="email"
                                    required
                                    name="install[email]"
                                    type="email"
                                    placeholder="管理员电子邮箱地址"
                                    class="rounded w-full px-4 py-2 border border-solid text-basic-800 bg-basic-200 border-primary-500 dark:text-basic-100 dark:bg-basic-900"
                                />
                                <label
                                    class="text-basic-600 pt-1 text-xs">设置一个邮箱地址，可以在忘记密码的时候使用邮箱来找回密码</label>
                                </div>
                            </div>
                            <div class="mb-10">
                                <button name="submit" type="submit" disabled
                                        class="w-full py-2 px-3 border-solid border rounded bg-primary-500 border-primary-500 text-basic-100 disabled:text-basic-600/75 disabled:border-basic-600/25 disabled:bg-basic-600/25">
                                    安装
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">
    /**
     * @type {HTMLFormElement}
     */
    const form = document.querySelector('form');
    /**
     *
     * @type {HTMLButtonElement}
     */
    const button = form.querySelector('button');
    /**
     *
     * @param {Event} changeEvent
     */
    const changeEvent = function (changeEvent) {
        button.disabled = !form.checkValidity();
    };
    form.addEventListener('change', changeEvent);
</script>
</body>
